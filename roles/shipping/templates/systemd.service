[Unit]
Description=Shipping Service

[Service]
User=roboshop
Environment=CART_ENDPOINT={{ lookup('aws_ssm', 'mutable.shipping.{{ENV}}.CART_ENDPOINT', region='us-east-1' ) }}
Environment=DB_HOST={{ lookup('aws_ssm', 'mutable.rds.{{ENV}}.DB_HOST', region='us-east-1' ) }}
ExecStart=/bin/java -Xmx{{MEM}}m  -Xms{{MEM}}m -jar /home/roboshop/shipping/shipping.jar
SyslogIdentifier=shipping

[Install]
WantedBy=multi-user.target